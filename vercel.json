{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "client/dist/**"
      }
    }
  ],
  "buildCommand": "cd client && npm install && npm run build",
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/uploads/(.*)", "dest": "/server/index.js" },
    { "src": "/(.*)", "dest": "/server/index.js" }
  ]
}
